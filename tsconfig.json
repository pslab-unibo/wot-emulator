{
  "compilerOptions": {
    "target": "es2022",                         // Aggiornato a ES2022
    "module": "commonjs",                       // Utilizza CommonJS, il modulo usato da Node.js
    "strict": true,                             
    "esModuleInterop": true,                    // Necessario per compatibilit√† con moduli CommonJS
    "skipLibCheck": true,                       // Ignora controlli di tipo nelle librerie
    "forceConsistentCasingInFileNames": true,  
    "outDir": "./dist",                         // Cartella di output
    "rootDir": "./src",                         // Cartella sorgente
    "moduleResolution": "node",                 
    "types": ["node", "jest"]                           // Include i tipi di Node.js
  },
  "include": ["src/**/*", "src/configuration"],                      
  "exclude": ["node_modules"]                   
}